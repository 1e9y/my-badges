{
  "name": "update-my-badges",
  "version": "1.0.22",
  "description": "Generate badges for your GitHub projects",
  "type": "module",
  "bin": {
    "update-my-badges": "dist/main.js"
  },
  "scripts": {
    "start": "tsc --watch",
    "tsc": "tsc",
    "build": "npm run copy-files && npm run tsc",
    "copy-files": "copyfiles -u 1 src/**/*.graphql dist/",
    "check-images": "node dist/check-images.js",
    "test": "node test.js",
    "release": "release-it"
  },
  "dependencies": {
    "@octokit/plugin-retry": "^6.0.1",
    "@octokit/plugin-throttling": "^8.0.0",
    "minimist": "^1.2.8",
    "octokit": "^3.1.1"
  },
  "devDependencies": {
    "@octokit/graphql-schema": "^14.33.0",
    "@types/minimist": "^1.2.3",
    "@types/node": "^20.8.0",
    "copyfiles": "^2.4.1",
    "release-it": "^16.2.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist"
  ],
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false,
      "tag": false
    },
    "github": {
      "release": false
    }
  },
  "repository": "my-badges/my-badges",
  "author": "Anton Medvedev <anton@medv.io>",
  "license": "MIT"
}
